@model IEnumerable<NewHelpDesk.Models.ApplicationUser>
@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <div class="row">
                <a href="@Url.Action("CreateUser")" class="btn btn-success pull-right" style="margin-bottom:15px;">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                                Добавить
                </a>            
        </div>
        <table class="table">
            <tr>
                <th>
                    №
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>Роль</th>
            </tr>
            @{var i = 0;}
            @foreach (var user in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>@user.Roles</td>
                </tr>
            }

        </table>
    </div>

</body>
</html>
