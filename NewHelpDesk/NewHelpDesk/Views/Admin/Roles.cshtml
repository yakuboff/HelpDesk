@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Роли</title>
</head>
<body>
    <div>
        <a href="@Url.Action("CreateRole")" class="btn btn-success pull-right" style="margin-bottom:15px;">
            <span class="glyphicon glyphicon-plus-sign"></span>
            Добавить
        </a>
    </div>
    <table class="table">
        <tr>
            <th>
                №
            </th>
            <th>
                Наименование
            </th>
            <th></th>
        </tr>
    @{var i = 0;}
    @foreach (var item in Model) {
        i++;
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
